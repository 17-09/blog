{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "esnext",
    "noEmit": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "types": ["react", "node", "jest"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "public", ".cache"]
}
